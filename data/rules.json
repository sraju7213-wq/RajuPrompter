{
  "version": "1.0.0",
  "platforms": {
    "midjourney": {
      "syntax": "MJv6",
      "parameters": [
        "--ar",
        "--stylize",
        "--chaos",
        "--seed",
        "--v"
      ],
      "defaults": {
        "--v": "6",
        "--stylize": "100",
        "--chaos": "5",
        "--ar": "1:1"
      }
    },
    "stablediffusion": {
      "syntax": "SDXL",
      "parameters": [
        "steps",
        "cfg",
        "sampler",
        "seed",
        "size"
      ],
      "defaults": {
        "steps": 30,
        "cfg": 7.5,
        "sampler": "DPM++ 2M Karras",
        "size": "1024x1024"
      }
    },
    "flux": {
      "syntax": "Flux.1",
      "parameters": [
        "guidance",
        "steps",
        "seed",
        "ratio"
      ],
      "defaults": {
        "guidance": 3.5,
        "steps": 28,
        "ratio": "1:1"
      }
    },
    "naturallanguage": {
      "syntax": "NL",
      "parameters": [
        "tone",
        "length"
      ],
      "defaults": {
        "tone": "descriptive",
        "length": "compact"
      }
    }
  },
  "categories": {
    "portrait": {
      "template": "{adj_visual} {mood} portrait of a {subject} {verb}, {lighting} lighting, {lens}, in a {environment}, {style_hint}, {color_hint}.",
      "weights": {
        "adj_visual": 2,
        "mood": 1,
        "subject": 3,
        "lighting": 2,
        "lens": 1,
        "environment": 1,
        "style_hint": 1,
        "color_hint": 1
      },
      "recommended_ar": [
        "1:1",
        "3:4",
        "2:3"
      ]
    },
    "nature": {
      "template": "{adj_visual} {mood} {environment} with {color_hint} tones, {style_hint}, captured with {lens}, {lighting}.",
      "weights": {
        "adj_visual": 2,
        "mood": 1,
        "environment": 3,
        "color_hint": 1,
        "style_hint": 1,
        "lens": 1,
        "lighting": 2
      },
      "recommended_ar": [
        "3:2",
        "16:9",
        "4:3"
      ]
    },
    "product": {
      "template": "{adj_visual} product photo of a {color_hint} {object} on {material} surface, {lighting}, {style_hint}, flawless composition.",
      "weights": {
        "adj_visual": 2,
        "object": 2,
        "material": 1,
        "lighting": 2,
        "style_hint": 1,
        "color_hint": 1
      },
      "recommended_ar": [
        "1:1",
        "4:5"
      ]
    },
    "sci-fi": {
      "template": "{adj_visual} {mood} scene of a {subject} in a {environment}, {style_hint}, {lighting}, high detail, futuristic materials like {material}.",
      "weights": {
        "adj_visual": 2,
        "mood": 1,
        "subject": 2,
        "environment": 3,
        "style_hint": 1,
        "lighting": 2,
        "material": 1
      },
      "recommended_ar": [
        "16:9",
        "21:9"
      ]
    },
    "surprise": {
      "template": "{adj_visual} {mood} depiction of {subject} and {animal} within {environment}, unexpected palette of {color_hint}, {style_hint}, {lighting}.",
      "weights": {
        "adj_visual": 2,
        "mood": 1,
        "subject": 2,
        "animal": 1,
        "environment": 2,
        "color_hint": 1,
        "style_hint": 1,
        "lighting": 2
      },
      "recommended_ar": [
        "1:1",
        "3:2",
        "16:9"
      ]
    }
  },
  "conflicts": [
    [
      "underwater",
      "desert"
    ],
    [
      "arctic",
      "volcanic"
    ],
    [
      "neon glow",
      "noon sunlight"
    ],
    [
      "macro",
      "aerial"
    ]
  ],
  "synergies": [
    [
      "golden hour",
      "warm palette"
    ],
    [
      "blue hour",
      "cool palette"
    ],
    [
      "studio-lit",
      "product"
    ],
    [
      "85mm portrait lens",
      "portrait"
    ]
  ],
  "negative_defaults": [
    "blurry",
    "out of focus",
    "low resolution",
    "poor anatomy",
    "mutated",
    "deformed",
    "extra limbs",
    "missing limbs",
    "cropped face",
    "duplicate",
    "noise",
    "artifacts",
    "watermark",
    "text",
    "logo",
    "oversaturated",
    "overexposed",
    "underexposed",
    "posterization",
    "low contrast",
    "tiling",
    "jpeg artifacts",
    "glitch",
    "pixelated",
    "unnatural skin",
    "flat lighting",
    "bad composition"
  ],
  "note": "Rules define templates, platform defaults, and composition constraints; the app enforces these when generating prompts."
}